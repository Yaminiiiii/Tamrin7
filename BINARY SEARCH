#include <iostream>
using namespace std;
int binarySearch(int arr[], int , int , int);
int main()
{
    int arr[] = { 2, 3, 4, 10, 40, 67, 98, 100 };
    int A = 67;
    int B = sizeof(arr) / sizeof(arr[0]);
    int result = binarySearch(arr, 0, B - 1, A);
    (result == -1) ? cout << "Element doesnt exists in array"
                   : cout << "Element exists in index " << result;
    return 0;
}
int binarySearch(int arr[], int l, int r, int A)
{
    if (r >= l) {
        int mid = l + (r - l) / 2;

        if (arr[mid] == A)
            return mid;

        if (arr[mid] > A)
            return binarySearch(arr, l, mid - 1, A);

        return binarySearch(arr, mid + 1, r, A);
    }
    return -1;
}
